<!DOCTYPE html>
<html>
<head>
    <title><%= yield(:title) %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>
<body>


<div class="wrapper">
    <div class="header">
        <div class="container clearfix">

            <div class="header_element theme_background">
                <div id="home_icon" class="pictogram_image lark_pictogram_image">
                </div>
            </div>

            <div class="site-search">
                <form>
                    <input type="text">
                </form>
            </div>
            <ul class="nav-left">
                <li class="header-nav-item">
                    <%= link_to 'Browse', controller: 'pages', action: 'browser' %>
                </li>

            </ul>
            <ul class="nav-right">
                <% if current_user %>
                    <li class="header-nav-item">
                        <%= link_to edit_user_url(current_user.id) do %>
                        <span class="header-nav-item"><%= @user.name %></span>
                        <% end %>
                    </li>
                <% end %>
                <li class="header-nav-item">
                    <%= link_to 'import', controller: 'pages', action: 'import' do %>
                        <i class="fa fa-cog"></i>
                    <% end %>
                </li>
                <% if current_user %>
                    <li class="header-nav-item">
                        <%= link_to logout_path, :method => 'post' do %>
                            <i class="fa fa-sign-out"></i>
                        <% end %>
                    </li>
                <% end %>


            </ul>
        </div>
    </div>

    <%= yield %>
</div>

</body>
</html>

