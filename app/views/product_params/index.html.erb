<% if @is_product %>
<h1>Listing product.id=<%= @product.id %> / product_params</h1>
<% else %>
<h1>Listing order.id=<%= @order.id %> / product_params</h1>
<% end %>
<table>
  <thead>
    <tr>
      <th>Key</th>
      <th>Name</th>
      <th>ParamType</th>
      <th>Description</th>
      <th>Constraint</th>
      <th>Mandatory</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_params.each do |product_param| %>
      <tr>
        <td><%= product_param.key %></td>
        <td><%= product_param.name %></td>
        <td><%= product_param.paramtype %></td>
        <td><%= product_param.description %></td>
        <td><%= product_param.constraint %></td>
        <td><%= product_param.mandatory %></td>
        <td><%= product_param.value %></td>
        <% if @is_product %>
        <td><%= link_to 'Show', product_product_param_path(@product, product_param) %></td>
        <td><%= link_to 'Edit', edit_product_product_param_path(@product, product_param) %></td>
        <td><%= link_to 'Destroy', product_product_param_path(@product, product_param), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td><%= link_to 'Show', order_product_param_path(@order, product_param) %></td>
        <td><%= link_to 'Edit', edit_order_product_param_path(@order, product_param) %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @is_product %>
<%= link_to 'New Product param', new_product_product_param_path(@product) %>
<% end %>
