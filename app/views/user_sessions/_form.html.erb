<% content_for :title, "LarkLims - Sign In" %>

<div id="signin-section">

    <div class="container clearfix">
        <%= form_tag user_sessions_path, :method => :post, :id => 'form-signin' do %>

            <dl class="form-si">
                  <dd class="field">
                      <input class="textfield" type="text" autofocus="" placeholder="E-mail" name="email">
                  </dd>
            </dl>
            <dl class="form-si">
                  <dd class="field">
                      <input class="textfield" type="password" placeholder="Password" name="password" onkeydown="if (event.keyCode == 13) document.getElementById('form-signin').submit();">
                  </dd>
            </dl>
            <dl class="form-si">
                <dd class="field">
                    <a class="button primary button-block" onclick="document.getElementById('form-signin').submit()">Login</a>
                </dd>
            </dl>
        <% end %>

        <h1 class="heading">
            LIMS<br/> simpler than ever.
        </h1>

        <p class="subheading">
            Track your lab orders, collaborate with your collegues.
        </p>
    </div>

</div>
<div class="welcome-section">
    <div class="container">
        <h1>Why you will love LarkLims.</h1>
        <p class="welcome-sub">Simple usage supporting all your workflows...</p>
    </div>
</div>

<div>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
</div>